  <div class="card-product-infos">
    <% @figures.each do |figure| %>
      <%= link_to figure_path(figure), class: "text-decoration-none" do %>
        <h3><%= figure.name %> - <%= figure.version %></h3>
        <h4>Type</h4>
        <p><%= figure.category %> </p>
        <h4>Manufacturer</h4>
        <p><%= figure.manufacturer%></p>
        <h4>Size</h4>
        <p><%= figure.size %></p>
        <h4>Price</h4>
        <p><%= figure.price %> Â¥</p>
      <% end %>
    <% end %>
  </div>
</div>


